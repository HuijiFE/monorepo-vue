{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "scripthost", "esnext"],
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": [
    "packages/@ns/*/src/**/*.ts",
    "packages/@ns/*/src/**/*.tsx",
    "packages/@ns/*/tests/**/*.ts",
    "packages/@ns/*/tests/**/*.tsx",
    "packages/@ns/*/scripts/**/*.ts",
    // "packages/@ns/*/typings/**/*.d.ts",
    "scripts/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
